{
  "name": "@fnndsc/chrisapi",
  "version": "1.12.0",
  "description": "JavaScript6 client for the ChRIS API",
  "main": "./dist/node/chrisapi.js",
  "browser":"./dist/web/chrisapi.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "tsc && webpack",
    "precommit": "lint-staged",
    "start": "karma start",
    "test": "karma start --single-run",
    "docs": "esdoc -c esdoc.json"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,ts,tsx}": [
      "prettier --write"
    ],
    "*.{js,jsx,json,css,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/sinon": "^10.0.13",
    "babel-loader": "^9.0.1",
    "chai": "^4.3.4",
    "esdoc": "^1.1.0",
    "esdoc-importpath-plugin": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "husky": "^8.0.1",
    "karma": "^6.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-mocha": "^2.0.1",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "sinon": "^14.0.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "core-js": "^3.26.0",
    "webpack-merge": "^4.2.2"
  }
}
