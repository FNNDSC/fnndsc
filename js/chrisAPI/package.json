{
  "name": "@fnndsc/chrisapi",
  "version": "1.6.1",
  "description": "JavaScript6 client for the ChRIS API",
  "main": "dist/chrisapi.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && webpack",
    "precommit": "lint-staged",
    "start": "karma start",
    "test": "karma start --single-run",
    "docs": "esdoc -c esdoc.json"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,ts,tsx}": [
      "prettier --write"
    ],
    "*.{js,jsx,json,css,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^9.0.11",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "esdoc": "^1.1.0",
    "esdoc-importpath-plugin": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "husky": "^6.0.0",
    "karma": "^6.3.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-mocha": "^2.0.1",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^5.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "sinon": "^10.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.31.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "core-js": "^3.15.2"
  }
}
