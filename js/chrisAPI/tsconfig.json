{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.js"],
  "compilerOptions": {
    // build
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "target": "ESNext",
    "outDir": "dist/types",
    "types": ["node"],
    "module": "commonjs",

    // build settings
    "sourceMap": false,
    "pretty": true,
    "declaration": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,

    // strict
    "strict": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "noEmit": false,
    "importHelpers": false,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  }
}
